<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sarker.scheduler">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".OfflineFirebase"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Task"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".EditRoutine"
            android:theme="@style/Theme.MyApp" />
        <activity android:name=".ManageRoutine" />
        <activity android:name=".ImportRoutine" />
        <activity
            android:name=".AddRoutine"
            android:theme="@style/Theme.MyApp" />
        <activity android:name=".MyRoutineKey" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registration"
            android:theme="@style/Theme.MyApp" />
        <activity
            android:name=".mainview.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.MyApp" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver android:name=".SetAlarm" />
        <receiver android:name=".SetReminder" />
    </application>

</manifest>